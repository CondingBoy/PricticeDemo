<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wang.administrator.pricticedemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".translucentbar.ColorTranslucentActivity" />
        <activity
            android:name=".translucentbar.ImageTranslucentActivity"
            android:theme="@style/ImageTranslucentBarTheme" />
        <activity
            android:name=".mdwidget.ToolbarActivity"
            android:theme="@style/ColorTranslucentBarTheme"></activity>
        <activity android:name=".mdwidget.ZhihuToolbarActivity"
            android:theme="@style/ColorTranslucentBarTheme"></activity>
    </application>

</manifest>